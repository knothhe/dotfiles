{{- $osid := .chezmoi.os -}}
{{- if hasKey .chezmoi.osRelease "id" -}}
{{-   $osid = printf "%s-%s" .chezmoi.os .chezmoi.osRelease.id -}}
{{- end -}}

{{- $email := promptStringOnce . "email" "Email address" -}}
{{- $emailDev := promptStringOnce . "emailDev" "Develop Email address" -}}
{{- $userDev := promptStringOnce . "emailDev" "Develop username" -}}
{{- $work := promptBoolOnce . "work" "Work environment" -}}

encryption = "gpg"

[data]
    osid = {{ $osid | quote }}
    excludePassFile = false
    email = {{ $email | quote }}
    emailDev = {{ $emailDev | quote }}
    userDev = {{ $userDev | quote }}
    work = {{ $work }}

[gpg]
    recipient = {{ $email | quote }}
    args = ["--quiet"]
